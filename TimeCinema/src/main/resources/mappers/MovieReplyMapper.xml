<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    <mapper namespace="com.spring.timecinema.movieReply.mapper.IMovieReplyMapper">
    
    <select id="insert" >
    	INSERT INTO reply
    	(replyNo, writer, user_id, content, reg_date)];
    	VALUES
    	(reply_seq.NEXTVAL, #{writer}, #{userId}, #{content}, #{regDate})
    </select>
    
    <delete id="delete">
    	DELETE FROM reply
    	WHERE reply_no = #{replyNo} 
    </delete>
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    </mapper>